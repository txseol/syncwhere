// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// 유저 기본 정보 테이블
model UserData {
  id         String   @id @default(uuid()) @db.Uuid
  provider   String   @default("google") // google, github, kakao 등
  providerId String   @map("provider_id")
  email      String?
  name       String?
  picture    String?  // 프로필 이미지 URL
  status     Int      @default(0)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz

  // 관계
  logins          UserLogin[]
  createdChannels ChannelData[]   // 생성한 채널들
  channelMembers  ChannelMember[] // 가입한 채널 멤버십

  @@unique([provider, providerId])
  @@map("user_data")
}

// 유저 로그인 기록 테이블
model UserLogin {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  platform  String   // browser, vscode, cli 등
  ip        String?
  userAgent String?  @map("user_agent")
  loginAt   DateTime @default(now()) @map("login_at") @db.Timestamptz

  // 관계
  user UserData @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([loginAt])
  @@map("user_login")
}

// 채널 데이터 테이블
model ChannelData {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique // 채널 이름
  createdBy String   @map("created_by") @db.Uuid // 채널 생성자 UserData.id
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  // 관계
  creator UserData        @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  members ChannelMember[]

  @@index([createdBy])
  @@map("channel_data")
}

// 채널 멤버 테이블 (유저-채널 다대다 관계, 권한/상태 저장)
model ChannelMember {
  id         String   @id @default(uuid()) @db.Uuid
  channelId  String   @map("channel_id") @db.Uuid
  userId     String   @map("user_id") @db.Uuid
  permission Int      @default(1) // 0: 생성자(오너), 1: 일반 멤버
  status     Int      @default(0) // 0: 정상, 추후 밴/정지 등 확장
  joinedAt   DateTime @default(now()) @map("joined_at") @db.Timestamptz
  joinOrder  Int      @map("join_order") // 채널 내 가입 순서 (CRDT 우선순위용)

  // 관계
  channel ChannelData @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user    UserData    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId]) // 한 유저는 한 채널에 한 번만 가입
  @@index([channelId])
  @@index([userId])
  @@map("channel_member")
}
